@model List<Cinema>

<table class="table">
<thead>
<tr>
    <th scope="col">Cinema ID</th>
    <th scope="col">Name</th>
    <th scope="col">Rows Count</th>   
    <!--<th scope="col">Reserved Places</th>
    <th scope="col">Revenue</th>-->
</tr>
</thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>
                    @m.GetCinemaId()
                </td>
                <td>
                    @m.GetDescription()
                </td>
                <td>
                    @m.GetRows().Count
                </td>
                <!--<td>
                    @m.ReservedPlaces
                </td>
                <td>
                    @m.GetRevenue()
                </td>-->
            </tr>
        }
    </tbody>
</table>

<form method="post">
    <div>
        <input name="CinemaId"
               placeholder="Cinema ID" 
               type="number" 
               value="" />
        <input name="CinemaName"
               placeholder="Cinema Name"
               type="text"
               value="" />
        <input name="RowCount"
               placeholder="Rows count"
               type="number" />
        <input type="submit" 
               value="Add cinema" />
    </div>
</form>